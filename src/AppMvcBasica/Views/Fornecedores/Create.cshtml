@model AppMvcBasica.Models.Fornecedor

@{
    ViewData["Title"] = "Incluir Fornecedor";
}

<h1>@ViewData["Title"]</h1>
<hr />
<h4>Fornecedor</h4>
<div class="row">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="Nome" class="form-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Documento" class="form-label"></label>
            <input asp-for="Documento" class="form-control" />
            <span asp-validation-for="Documento" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="TipoFornecedor" class="form-label"></label>
            <div class="form-check">
                <input type="radio" class="form-check-input" value="1" asp-for="TipoFornecedor" checked />
                <label class="form-check-label" asp-for="TipoFornecedor">
                    Pessoa Física
                </label>
            </div>
            <div class="form-check">
                <input type="radio" class="form-check-input" value="2" asp-for="TipoFornecedor" />
                <label class="form-check-label" asp-for="TipoFornecedor">
                    Pessoa Jurídica
                </label>
            </div>
        </div>        
        <div class="mb-3 form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
            </label>
        </div>

        <hr />
        <h4>Endereço</h4>

        <partial name="_Endereco" />

        <div class="mb-3">
            <input type="submit" value="Confirmar" class="btn btn-success" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Voltar para a Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
